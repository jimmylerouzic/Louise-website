  <h1 class="text-center mt-5 mb-5">Login</h1>
  <div class="block-trait mb-5"></div>
  <div class="container form-container mb-5">
    <div class="new-product-picture">
      <%= image_tag "login.jpg", alt: "Contact", width: 600 %>
    </div>
    <div class="new-product-form mt-5 mb-5">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <% f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign in", class: "btn-custom3" %>
        </div>
      <% end %>
    </div>



