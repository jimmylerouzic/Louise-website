<div class="contact-wrapper">
  <h1 class="text-center mt-5 mb-5">Gallery</h1>
  <div class="block-trait"></div>
  <div class="product-container">
    <% @products.each do |product| %>
      <div class="product-card">
        <%= link_to product_path(product.id) do %>
          <div class="product-image" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(<%= image_path product.picture, height: 800, width: 1100, crop: :fill %>">
          </div>
        <% end %>

        <!-- <h3 class="mt-3 product-title"><%= product.title %></h3> -->
      </div>
    <% end %>
  </div>
</div>
